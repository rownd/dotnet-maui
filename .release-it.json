{
  "npm": false,
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "${version}"
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    },
    "@release-it/bumper": {
      "in": "VERSION",
      "out": [
        "Rownd/Rownd.Maui.csproj",
        "Rownd/README.md",
        "VERSION"
      ]
    }
  },
  "hooks": {
    "after:bump": [
      "mkdir -p pack",
      "cd Rownd && dotnet pack --configuration Release -o ../pack --include-source --include-symbols"
    ],
    "after:github:release": [
      "nuget push ./pack/Rownd.Maui.${version}.nupkg -src https://nuget.org"
    ]
  }
}
